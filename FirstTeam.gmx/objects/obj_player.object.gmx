//the base rate at which stamina refills. 
stamina_recharge_base_rate = 0.5;

//the base rate at which stamina depletes. Is modified depending on items.
stamina_deplete_base_rate = 0.5;

//set initial stamina to base stamina to begin
stamina = base_stamina;

//set initial player strength
player_strength = 1;

//initalize the global timer
global.time = 0;

//set initial player movement speed
player_speed = 4;

//sets time interval in which the player must eat or "starve", which decreases base stamina
base_time_to_starve = 30;

//set initial time to starve to the base time to starve
time_to_starve = base_time_to_starve;

//starve_time is the global timer moment when the player will "starve"
starve_time = (global.time + time_to_starve);

//when just_ate_or_starved is true, it resets the starving timer
just_ate_or_starved = true;

//this just provided a countdown timer to display how long before player starves
//delete after debugging
going_to_starve_in = starve_time;
